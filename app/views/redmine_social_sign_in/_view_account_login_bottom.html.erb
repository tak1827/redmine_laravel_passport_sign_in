<div class="<%= Redmine::Plugin.registered_plugins[:easy_extensions].nil? ? 'sso-sign-in' : 'easy-social-login' %>">
  <% if Setting.plugin_redmine_social_sign_in['google_enabled'] == '1' %>
    <%= link_to('social_sign_in/google_oauth2', title: l(:title_social_sign_in, provider: l(:label_google))) do %>
      <%= image_tag('google.png', plugin: 'redmine_social_sign_in', size: '24') %>
    <% end %>
  <% end %>
  <% if Setting.plugin_redmine_social_sign_in['facebook_enabled'] == '1' %>
    <%= link_to('social_sign_in/facebook', title: l(:title_social_sign_in, provider: l(:label_facebook))) do %>
      <%= image_tag('facebook.png', plugin: 'redmine_social_sign_in', size: '24') %>
    <% end %>
  <% end %>
  <% if Setting.plugin_redmine_social_sign_in['linkedin_enabled'] == '1' %>
    <%= link_to('social_sign_in/linkedin', title: l(:title_social_sign_in, provider: l(:label_linkedin))) do %>
      <%= image_tag('linkedin.png', plugin: 'redmine_social_sign_in', size: '24') %>
    <% end %>
  <% end %>
  <% if Setting.plugin_redmine_social_sign_in['twitter_enabled'] == '1' %>
    <%= link_to('social_sign_in/twitter', title: l(:title_social_sign_in, provider: l(:label_twitter))) do %>
      <%= image_tag('twitter.png', plugin: 'redmine_social_sign_in', size: '24') %>
    <% end %>
  <% end %>
  <% if Setting.plugin_redmine_social_sign_in['qq_connect_enabled'] == '1' %>
    <%= link_to('social_sign_in/qq_connect', title: l(:title_social_sign_in, provider: l(:label_qq_connect))) do %>
      <%= image_tag('qq_connect.png', plugin: 'redmine_social_sign_in', size: '24') %>
    <% end %>
  <% end %>
  <% if Setting.plugin_redmine_social_sign_in['wechat_enabled'] == '1' %>
    <%= link_to('social_sign_in/wechat', title: l(:title_social_sign_in, provider: l(:label_wechat))) do %>
      <%= image_tag('wechat.png', plugin: 'redmine_social_sign_in', size: '24') %>
    <% end %>
  <% end %>
  <% if Setting.plugin_redmine_social_sign_in['pptv_enabled'] == '1' %>
    <%= link_to('social_sign_in/pptv', :class =>"sso-sign-in-btn", title: l(:title_social_sign_in, provider: l(:label_pptv))) do %>
      <%= l(:label_social_sign_in) %>    
    <% end %>
  <% end %>
</div>
<style type="text/css">
  .sso-sign-in {
    margin: -2em auto 2em auto;
    padding: 20px;
    width: 300px;
  }
 .sso-sign-in-btn {
    display: inline-block;
    font-weight: bold;
    padding: 0.5em 0.5em;
    background: #00bcd4;
    width: 100%;
    text-align: center;
  }
  .sso-sign-in-btn:hover {
    background: #1ec7bb;
  }
  a.sso-sign-in-btn {
    color: #fff;
  }
  a.sso-sign-in-btn:hover {
    text-decoration: none;
  }
</style>
